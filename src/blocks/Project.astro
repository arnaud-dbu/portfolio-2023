---
import HorizontalLine from "../components/HorizontalLine.astro";
import P from "../components/P.astro";
export interface Props {
	title: string;
	categories: string;
	year: string;
	href: string;
}

const { title, categories, year, href } = Astro.props;
---

<a href={href} class="project relative my-14 flex flex-col justify-between xl:my-20">
	<div class="flex items-center justify-between">
		<span class="font-serif text-5xl uppercase xl:text-9xl">{title}</span>
		<span class="text-2xl opacity-20 xl:text-5xl">/{year}</span>
	</div>
	<P size="sm">{categories}</P>
</a>
<HorizontalLine />
