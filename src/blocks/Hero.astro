---
import { Image } from "@astrojs/image/components";
---

<div class="h-screen flex flex-col justify-between layout-wrapper py-12">
	<div class="flex justify-between">
		<div class="flex flex-col">
			<span class="text-9xl font-serif uppercase">Full stack developer</span>
			<span class="uppercase font-sans text-3xl">- Front end addicited</span>
		</div>
		<Image
			src="/images/portret.jpg"
			alt="Portret Arnaud De Burchgraeve"
			class="w-96 h-fit object-contain"
			width={300}
			height={450}
		/>
	</div>
	<div class="flex items-end justify-between">
		<div class="flex flex-col items-center gap-2">
			<Image
				src="/icons/arrow-down.svg"
				alt="Arrow Icon"
				width={40}
				height={47.5}
				class="w-7 object-contain"
			/>
			<span class="uppercase">Scroll</span>
		</div>
		<h1 class="text-9xl font-serif uppercase w-1/2 text-end">Arnaud De Burchgraeve</h1>
	</div>
</div>
