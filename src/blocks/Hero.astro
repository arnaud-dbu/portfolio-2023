---
import { Image } from "@astrojs/image/components";
---

<div class="layout-wrapper flex h-screen flex-col justify-between py-12">
	<div class="flex justify-between">
		<div class="hero-attribute flex flex-col">
			<span class="position mask-container font-serif text-9xl uppercase">Full stack</span>
			<span class="position mask-container font-serif text-9xl uppercase">developer</span>
			<span class="positionDetail mask-container font-sans text-2xl uppercase"
				>- Front end addicited</span
			>
		</div>
		<div class="hero-attribute img-container">
			<Image
				src="/images/portret.jpg"
				alt="Portret Arnaud De Burchgraeve"
				class="img h-fit w-96 object-contain"
				width={300}
				height={450}
			/>
		</div>
	</div>
	<div class="flex items-end justify-between">
		<div class="hero-attribute scroll mask-container flex flex-col items-center gap-2">
			<Image
				src="/icons/arrow-down.svg"
				alt="Arrow Icon"
				width={40}
				height={47.5}
				class="w-7 object-contain"
			/>
			<span class="uppercase">Scroll</span>
		</div>
		<div
			class="hero-attribute flex flex-col items-end whitespace-nowrap font-serif text-9xl uppercase">
			<span class="name mask-container">Arnaud</span>
			<span class="name mask-container">De Burchgraeve</span>
		</div>
	</div>
</div>
