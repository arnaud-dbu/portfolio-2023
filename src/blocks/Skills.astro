---
import H2 from "../components/H2.astro";
import Skill from "../blocks/Skill.astro";
---

<section class="skills layout-wrapper section-spacing invisible">
	<H2 title="My skillls" />
	<div
		class="skills__body 2xl:gap-18 mt-16 flex flex-col gap-12 xl:h-[19rem] xl:flex-row xl:gap-20">
		<Skill
			number="01"
			title="I design"
			description="Eye-catching digital graphics like logos or brochures that leave a lasting impression, setting brands apart from the competition."
		/>
		<hr class="h-[1.5px] w-full bg-grey opacity-0 xl:h-full xl:w-[1px]" />
		<Skill
			number="02"
			title="I build"
			description="Easy-to-use, human-centered user interface designs that ensure every interaction feels intuitive and delightful."
		/>
		<hr class="h-[1.5px] w-full bg-grey opacity-0 xl:h-full xl:w-[1px]" />
		<Skill
			number="03"
			title="I develop"
			description="Fully responsive websites that seamlessly adapt to various devices, providing users with an exceptional browsing experience at their fingertips."
		/>
	</div>
</section>
