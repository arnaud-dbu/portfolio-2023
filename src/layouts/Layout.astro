---
import LocalScripts from "../components/LocalScripts.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-grey">
		<slot />
		<div class="cursor"></div>
		<div class="cursor-shadow"></div>
		<div class="cursor2"></div>
		<LocalScripts />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	* {
		cursor: none;
	}

	html {
		font-family: system-ui, sans-serif;
		background-color: #f6f6f6;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	p {
		font-family: "Nunito", sans-serif;
	}

	.layout-wrapper {
		max-width: 100rem;
		margin-left: auto;
		margin-right: auto;
		padding-left: 2rem;
		padding-right: 2rem;
	}

	.mask-container {
		clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
	}

	.reveal {
		visibility: hidden;
		position: relative;
	}

	.bottom-line {
		position: relative;
	}

	.bottom-line::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 0.1rem;
		background-color: black;
		opacity: 0.1;
	}

	.division-line {
		position: relative;
		width: 100%;
		height: 0.1rem;
		background-color: black;
		opacity: 0.2;
		transform: scaleX(0);
		transform-origin: left;
	}

	.division {
		position: relative;
		width: 100%;
		height: 0.1rem;
		background-color: black;
		opacity: 0.2;
		transform: scaleX(0);
		transform-origin: left;
	}

	.top-line {
		position: relative;
	}

	.top-line::after {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 0.1rem;
		background-color: black;
		opacity: 0.1;
	}

	.absolute-center {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%) !important;
	}

	.cursor {
		width: 60px;
		height: 60px;
		border-radius: 100%;
		transition: all 200ms ease-out;
		background-color: #f03232;
		position: fixed;
		pointer-events: none;
		left: 0;
		top: 0;
		transform: translate(calc(-50% + 15px), -50%);
		mix-blend-mode: lighten;
		transition: 0.15s linear;
	}

	.cursor-shadow {
		width: 3rem;
		height: 3rem;
		border-radius: 100%;
		transition: all 200ms ease-out;
		background-color: transparent;
		box-shadow: rgba(0, 0, 0, 0.2) 0px 18px 50px -10px;
		position: fixed;
		pointer-events: none;
		left: 0;
		top: 0;
		transform: translate(calc(-50% + 15px), -50%);
		transition: 0.15s linear;
	}

	.cursor2 {
		width: 0.4rem;
		height: 0.4rem;
		border-radius: 100%;
		background-color: #f03232;
		position: fixed;
		transform: translate(-50%, -50%);
		pointer-events: none;
		transition: width 0.3s, height 0.3s, opacity 0.3s;
	}

	.hover {
		width: 12.5rem;
		height: 12.5rem;
		opacity: 0.85;
	}

	.cursorinnerhover {
		width: 3rem;
		height: 3rem;
		border: 0.15rem solid #f03232;
		background-color: transparent;
		opacity: 0.2;
	}

	@font-face {
		font-family: "Melodrama";
		src: url("/fonts/Melodrama-Medium.woff") format("woff");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Nunito";
		src: url("/fonts/Nunito-Regular.woff") format("woff");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@import url("https://fonts.googleapis.com/css?family=Montserrat:900");

	[data-cursor] {
		width: 50px;
		height: 50px;
		background: linear-gradient(120deg, #ff1744, #e040fb, #2979ff, #00e5ff, #76ff03);
		background-size: 1600% 1600%;
		mix-blend-mode: difference;
		pointer-events: none;
		z-index: 50;
		transition: 0.15s linear;
		animation: blobRadius 5s ease infinite, blobBackground 15s ease infinite;
	}
</style>
